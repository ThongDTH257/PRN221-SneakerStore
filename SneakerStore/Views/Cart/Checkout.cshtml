@{
    ViewData["Title"] = "Checkout";
}
@model CheckoutViewModel
<section class="h-100">
    <div class="container py-5">
        <form asp-action="Checkout" asp-controller="Cart" method="POST">
            <div class="row d-flex justify-content-center my-4">
                <div class="col-md-8">
                    <div class="card mb-4 p-4">
                        <h5 class="text-uppercase">Delivery Address</h5>
                        <div class="row mt-2">
                            <div class="col">
                                <div class="inputbox mt-3 mr-2"> <input type="text" value="@Model.Phone" asp-for="Phone" class="form-control" required="required"> <span>Contact Number</span> </div>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col">
                                <div class="inputbox mt-3 mr-2"> <input type="text" asp-for="Address" class="form-control" required="required"> <span>Delivery Address</span> </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-4">
                            <h5 class="text-uppercase">Payment details</h5>
                            <div>
                                <div class="form-check mt-4">
                                    <input class="form-check-input" value="Cash On Delivery" asp-for="PaymentMethod" type="radio" id="cod-radio" checked />
                                    <label class="form-check-label" for="cod-radio">Cash On Delivery</label>
                                </div>

                                <div class="form-check mt-4">
                                    <input class="form-check-input" type="radio" id="credit-card-radio" disabled />
                                    <label class="form-check-label" for="credit-card-radio">Credit or Debit Card</label>
                                </div>

                                <div class="form-check mt-4">
                                    <input class="form-check-input" type="radio" id="wallet-radio" disabled />
                                    <label class="form-check-label" for="wallet-radio">My Wallet</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Products
                                    <span>$@Model.TotalPrice.ToString("#,##0.00")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Shipping
                                    <span>Free of Charge</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    <input type="hidden" asp-for="TotalPrice" value="@Model.TotalPrice" />
                                    <span><strong>$@Model.TotalPrice.ToString("#,##0.00")</strong></span>
                                </li>
                            </ul>

                            <button type="submit" class="btn btn-success btn-lg btn-block @(@Model.TotalPrice == 0 ? "disabled" : "")">
                                Place Order
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>