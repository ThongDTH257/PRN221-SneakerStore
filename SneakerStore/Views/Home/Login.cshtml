@{
    ViewData["Title"] = "Login";
}
@model SneakerStore.Models.LoginViewModel

<section class="vh-100 bg-light">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/img/about-hero.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-action="Login" asp-controller="Home" asp-route-returnurl="@(Context.Request.Query["ReturnUrl"])" method="post">
                    <p class="navbar-brand text-success logo h1 align-self-center">
                        Sneaky
                    </p>

                    <h5 class="fw-normal mb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                    <!-- Error message -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <!-- Email input -->
                    <div class="form-outline mb-4 mt-4">
                        <input type="email" asp-for="Email" class="form-control form-control-lg" required />
                        <label class="form-label" asp-for="Email">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" asp-for="Password" class="form-control form-control-lg" required />
                        <label class="form-label" asp-for="Password">Password</label>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block mb-3"
                            style="background-color: #59ab6e">
                        Sign in
                    </button>

                    <p class="mb-5 pb-lg-2">
                        Don't have an account? <a asp-controller="Home" asp-action="Register" style="color: #59ab6e;">Register here</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>